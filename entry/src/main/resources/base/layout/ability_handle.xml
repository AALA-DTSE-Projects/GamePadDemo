<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:layout"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg"
    ohos:orientation="horizontal">

    <Image
        ohos:id="$+id:direction_button"
        ohos:width="160vp"
        ohos:height="160vp"
        ohos:left_margin="28vp"
        ohos:bottom_margin="28vp"
        ohos:background_element="$media:bigcircle"
        ohos:align_parent_bottom="true"
        ohos:align_parent_left="true"
        />
    <Image
        ohos:id="$+id:direction_circle"
        ohos:width="80vp"
        ohos:height="80vp"
        ohos:background_element="$media:smallcircle"
        ohos:left_margin="68vp"
        ohos:bottom_margin="68vp"
        ohos:align_parent_bottom="true"
        ohos:align_parent_left="true"
        />

    <Text
        ohos:id="$+id:location_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#C1CDC1"
        ohos:center_in_parent="true"
        ohos:text_size="20fp"/>

    <Image
        ohos:id="$+id:pause_button"
        ohos:right_margin="20vp"
        ohos:bottom_margin="40vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_of="$id:shoot_button"
        ohos:align_parent_bottom="true"
        ohos:center_in_parent="true"
        ohos:image_src="$media:pause" />

    <Image
        ohos:id="$+id:shoot_button"
        ohos:bottom_margin="40vp"
        ohos:right_margin="40vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_right="true"
        ohos:align_parent_bottom="true"
        ohos:center_in_parent="true"
        ohos:image_src="$media:a" />

</DependentLayout>